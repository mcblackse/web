extends _layout
block content
  section.container 
    img.avatar.mt-3.mb-5(src="https://media.giphy.com/media/7scCYNWRHUwKc/giphy.gif")
  section.container
    h2.mb-4.cover-heading=model.title
    p.mb-3.lead I need your help to start my own podcast!
  section.container.mb-5
    h2.cover-heading.mb-5 Buy this
    p buy one of these overpriced items
    .container
      .row
        each product in model.products
          .col-md
            .card.bg-transparent.h-100.w-75.mb-5.mx-auto
              .card-body
                h3.card-title=product.name
                p
                  span.badge.badge-success $#{product.price}
                a.btn.btn-dark.border.border-secondary(href=`/buy/${product._slug}`) More details
              
