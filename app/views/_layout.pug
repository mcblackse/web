          | Home
        a.mx-3.nav.navbar-nav.top-nav-info(href="/shop")
          | Shop
        a.mx-3.nav.navbar-nav.top-nav-info(href="/categories")
          | Categories
        a.mx-3.nav.navbar-nav.top-nav-info(href="/contact")
          | Contact
       
        a.nav-link.snipcart-checkout(href="#")
          i.fa.fa-shopping-cart
          |  (
          span.snipcart-items-count
          |) Checkout
      header.rounded-lg.m-5
          h1.display-4.m-5
            a(href="/")=settings.siteName
      main.inner.cover(role="main")
        block content
      footer.mastfoot.mt-auto.py-3.fixed-bottom
        .inner
